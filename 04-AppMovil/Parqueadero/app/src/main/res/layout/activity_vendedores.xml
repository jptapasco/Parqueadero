<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administrador.Vendedores">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tractor_image"
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_margin="16dp"
                android:src="@drawable/tractor" />

            <Button
                android:id="@+id/btn_parqueadero"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/greenBtn"
                android:padding="5dp"
                android:text="Parqueaderos"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn_vendedores"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/btn_parqueadero"
                android:background="@color/greenBtn"
                android:padding="5dp"
                android:text="vendedores"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn_salir"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/btn_vendedores"
                android:background="@color/red"
                android:padding="5dp"
                android:text="Salir"
                android:textColor="@color/white"
                android:textSize="10dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Vendedores" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
