<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administrador.MainActivityAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tractor_image"
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_margin="16dp"
                android:src="@drawable/tractor" />

            <Button
                android:id="@+id/btn_parqueadero"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/greenBtn"
                android:padding="5dp"
                android:allowClickWhenDisabled="true"
                android:text="Parqueaderos"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn_vendedores"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/btn_parqueadero"
                android:background="@color/greenBtn"
                android:padding="5dp"
                android:text="vendedores"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn_salir"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/btn_vendedores"
                android:background="@color/red"
                android:padding="5dp"
                android:text="Salir"
                android:textColor="@color/white"
                android:textSize="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="617dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/campo_buscar_parqueadero"
                    android:layout_width="272dp"
                    android:layout_height="66dp"
                    android:hint="Nit" />

                <Button
                    android:id="@+id/btnBuscarParqueadero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:text="Buscar"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCrearParqueadero"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/green"
                android:text="Crear Parqueadero"
                android:textColor="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerListaParqueadero"
                android:layout_width="match_parent"
                android:layout_height="472dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
