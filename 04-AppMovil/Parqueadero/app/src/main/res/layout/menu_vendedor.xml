<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tractor_image"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_margin="12dp"
            android:src="@drawable/tractor" />

        <ImageView
            android:id="@+id/btnParqueaderoV"
            android:layout_width="50dp"
            android:clickable="true"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/greenBtn"
            android:src="@drawable/ic_launcher_parqueadero_foreground"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/btnEntradaV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/greenBtn"
            android:src="@drawable/ic_launcher_entrada_foreground"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/btnHistorialV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/greenBtn"
            android:src="@drawable/ic_launcher_historial_foreground"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/btnTarifasV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/greenBtn"
            android:src="@drawable/ic_launcher_tarifas_foreground"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/btn_salirV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/red"
            android:textColor="@color/white"
            android:src="@drawable/ic_launcher_exit_foreground"
            android:textSize="10dp" />
    </LinearLayout>
</FrameLayout>